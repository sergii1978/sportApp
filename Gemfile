source 'https://rubygems.org'

# Основні гемы для Sinatra
gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'

# Для роботи з базою даних (якщо використовуєте ActiveRecord)
gem 'sqlite3', group: :development

# Для роботи з сесіями
gem 'rack-session'

# Для перевірки безпеки
gem 'bcrypt', '~> 3.1.7'

# Для роботи з інтернаціоналізацією (переклади)
gem 'i18n'

# Для зберігання файлів на сервері
gem 'fileutils'

# Для анімацій та слайдерів
# gem 'animatecss', '~> 0.0.11'

# Для завантаження зображень
gem 'carrierwave', '~> 2.0'

# Для роботи з CSS, JS
gem 'bootstrap', '~> 5.0'
gem 'font-awesome-sass', '~> 5.15'

# Для ActiveRecord (ORM) та міграцій
gem 'activerecord', '~> 6.0'

# Для тестування (опційно)
gem 'rspec', group: :test
gem 'rack-test', group: :test

gem 'nokogiri'