<% content_for :title do %><%= t(:contact_us) %><% end %>

  <header class="text-center py-5 bg-dark text-white">
    <div class="container">
      <h1 class="display-4 fw-bold"><%= t(:contact_us) %></h1>
      <p class="lead"><%= t(:get_in_touch) %></p>
    </div>
  </header>
  
  <section class="container py-5">
    <form action="/contact" method="post" class="p-4 bg-white shadow rounded">
      <div class="mb-3">
        <label for="name" class="form-label"><%= t(:your_name) %></label>
        <input type="text" id="name" name="name" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label"><%= t(:your_email) %></label>
        <input type="email" id="email" name="email" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="message" class="form-label"><%= t(:your_message) %></label>
        <textarea id="message" name="message" class="form-control" rows="4" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary"><%= t(:send_message) %></button>
    </form>
  </section>
  