<% content_for :title do %><%= t(:admin_login) %><% end %>

    <div class="container mt-5" style="max-width: 400px;">
      <div class="card shadow rounded">
        <div class="card-body">
          <h3 class="card-title text-center mb-4"><%= t(:admin_login) %></h3>
    
          <% if @error %>
            <div class="alert alert-danger"><%= @error %></div>
          <% end %>
    
          <form action="/admin/login" method="post">
            <div class="mb-3">
              <label for="password" class="form-label"><i class="fas fa-lock me-1"></i> <%= t(:password) %></label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">
              <i class="fas fa-sign-in-alt me-1"></i> <%= t(:login) %>
            </button>
          </form>
        </div>
      </div>
    </div>
       