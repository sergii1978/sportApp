<% content_for :title do %><%= t(:services) %><% end %>

  <header class="text-center py-5 bg-dark text-white">
    <div class="container">
      <h1 class="display-4 fw-bold"><%= t(:services) %></h1>
      <p class="lead"><%= t(:discover_our_services) %></p>
    </div>
  </header>
  
  <section class="container py-5">
    <div class="row text-center">
      <div class="col-md-4 mb-4">
        <i class="fas fa-dumbbell fa-3x mb-3 text-primary"></i>
        <h3><%= t(:personal_training) %></h3>
        <p><%= t(:personal_training_desc) %></p>
      </div>
      <div class="col-md-4 mb-4">
        <i class="fas fa-heartbeat fa-3x mb-3 text-primary"></i>
        <h3><%= t(:yoga_classes) %></h3>
        <p><%= t(:yoga_classes_desc) %></p>
      </div>
      <div class="col-md-4 mb-4">
        <i class="fas fa-swimmer fa-3x mb-3 text-primary"></i>
        <h3><%= t(:pool_training) %></h3>
        <p><%= t(:pool_training_desc) %></p>
      </div>
    </div>
  </section>
  